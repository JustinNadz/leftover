# LeftUber Backend Environment Configuration
# Copy this file to .env and update with your values

# ========================================
# Server Configuration
# ========================================
PORT=5000
NODE_ENV=development
API_VERSION=v1

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DATABASE_URL=postgresql://leftuber_user:leftuber_secret_password@127.0.0.1:5432/leftuber_db?schema=public

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=leftuber-super-secret-jwt-key-change-in-production-2024
JWT_REFRESH_SECRET=leftuber-super-secret-refresh-key-change-in-production-2024
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ========================================
# Authentication Configuration
# ========================================
SKIP_AUTH=false

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=http://localhost:8081,http://localhost:19006,http://localhost:19000,http://10.0.2.2:8081,https://*.exp.direct,https://*.expo.dev,http://*.exp.direct,http://*.expo.dev

# ========================================
# Development Configuration
# ========================================
DISABLE_MOCK=true
ALLOW_UNVERIFIED_PHONE=true

# ========================================
# OTP Configuration
# ========================================
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=4

# ========================================
# Email Configuration (Optional - for notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@leftuber.com

# ========================================
# SMS Configuration (Optional - for real OTP)
# ========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# Google Maps Configuration (Optional)
# ========================================
GOOGLE_MAPS_API_KEY=

# ========================================
# Payment Gateway Configuration (Optional)
# ========================================
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# ========================================
# Redis Configuration (Optional - for caching)
# ========================================
REDIS_URL=redis://127.0.0.1:6379

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=1000

# ========================================
# Logging
# ========================================
LOG_LEVEL=debug
LOG_DIR=logs

# ========================================
# Admin Configuration
# ========================================
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin123

# ========================================
# Delivery Configuration
# ========================================
DELIVERY_FEE=30
